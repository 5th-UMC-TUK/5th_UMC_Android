<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/includeNumT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:text="01"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/includeTitleImage"
        android:layout_width="36dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/image_title"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/includeNumT"
        app:layout_constraintStart_toEndOf="@id/includeNumT"
        app:layout_constraintTop_toTopOf="@id/includeNumT" />

    <TextView
        android:id="@+id/includeTitleT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:lines="1"
        android:textStyle="bold"
        android:text="OMG"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/includeNumT"
        app:layout_constraintEnd_toStartOf="@id/includePlayBtn"
        app:layout_constraintStart_toEndOf="@id/includeTitleImage"
        app:layout_constraintTop_toTopOf="@id/includeNumT" />

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/includeSingerT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="뉴진스"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/includePlayBtn"
        app:layout_constraintStart_toEndOf="@id/includeNumT"
        app:layout_constraintTop_toBottomOf="@id/includeTitleT" />


    <ImageView
        android:id="@+id/includePlayBtn"
        android:layout_width="32dp"
        android:layout_marginEnd="4dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_play_arrow_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/includeMoreBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <ImageView
        android:layout_marginEnd="4dp"
        android:id="@+id/includeMoreBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_more_vert_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>