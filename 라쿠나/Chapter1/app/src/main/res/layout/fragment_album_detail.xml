<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/song_music_list_layout"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/detail_album_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="앨범명"
                        android:textSize="16dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/detail_album_name_data_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IU 5th Album 'LILAC'"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="@id/detail_album_name_tv"
                        app:layout_constraintStart_toEndOf="@id/detail_album_name_tv"
                        app:layout_constraintBottom_toBottomOf="@id/detail_album_name_tv"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/detail_artist_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아티스트"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/detail_artist_data_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이유 (IU)"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="@id/detail_artist_tv"
                        app:layout_constraintStart_toEndOf="@id/detail_artist_tv"
                        app:layout_constraintBottom_toBottomOf="@id/detail_artist_tv"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/detail_publisher_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="발매사"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/detail_publisher_data_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카카오엔터테인먼트"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="@+id/detail_publisher_tv"
                        app:layout_constraintStart_toEndOf="@+id/detail_publisher_tv"
                        app:layout_constraintBottom_toBottomOf="@+id/detail_publisher_tv"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/detail_agency_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기획사"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/detail_agency_data_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDAM엔터테인먼트"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="@id/detail_agency_tv"
                        app:layout_constraintStart_toEndOf="@id/detail_agency_tv"
                        app:layout_constraintBottom_toBottomOf="@id/detail_agency_tv"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/detail_album_intro_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="앨범소개"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/detail_album_intro_data_tv"/>
                    <TextView
                        android:id="@+id/detail_album_intro_data_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="@string/album_intro"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/detail_album_intro_tv"
                        app:layout_constraintStart_toStartOf="@id/detail_album_intro_tv"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>